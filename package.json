{
  "name": "tmg-iolink-interface",
  "version": "1.0.0",
  "description": "Node.js interface for TMG IO-Link USB Master V2 DLL",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "tsc",
    "build:electron": "tsc && npm run build:renderer",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "start": "node dist/server.js",
    "start:electron": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "ts-node-dev --respawn src/server.ts",
    "dev:electron": "concurrently \"npm run dev\" \"npm run start:electron\"",
    "test": "ts-node test.ts",
    "demo": "ts-node index.ts",
    "type-check": "tsc --noEmit",
    "rebuild": "electron-rebuild -f -w ffi-napi"
  },
  "keywords": [
    "io-link",
    "tmg",
    "dll",
    "interface",
    "blob",
    "sensor",
    "electron"
  ],
  "author": "Camilo & √Ålvaro",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "ffi-napi": "^4.0.3",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "ref-array-napi": "^1.2.2",
    "ref-napi": "^3.0.3",
    "ref-struct-napi": "^1.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@types/cors": "^2.8.17",
    "@types/electron": "^1.6.10",
    "@types/express": "^4.17.25",
    "@types/ffi-napi": "^4.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.0",
    "@types/ref-napi": "^3.0.12",
    "@types/socket.io": "^3.0.1",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "./assets/icon"
      },
      "rebuildConfig": {
        "force": false,
        "onlyModules": []
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "tmg_iolink_interface"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": []
    }
  }
}
